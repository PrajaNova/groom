generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("NEON_DATABASE_URL")
}

model Blog {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String
  readTime    Int?
  imageSeed   String
  category    String?
  format      Format  @default(markdown)
  author      String?  @default("Anonymous")
  publishedAt DateTime? @default(now())
}

enum Format {
  markdown
  html
  text
}

model Confession {
  id        String   @id @default(uuid())
  content   String
  // Optional JSON object storing submitter details when the user agrees to share
  submitterDetails Json?  @map("submitter_details")
  createdAt DateTime @default(now()) @map("created_at")
}



model Booking {
  id        String   @id @default(uuid())
  name      String
  email     String
  when      DateTime
  reason    String
  status    BookingStatus @default(pending)
  meetingId String?
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // Will store hashed password
  email     String?  @unique
  role      UserRole @default(admin)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  admin
  superadmin
}

enum BookingStatus {
  pending
  confirmed
  completed
  cancelled
}