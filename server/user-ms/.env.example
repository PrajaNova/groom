# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
LOG_LEVEL=info

# ============================================
# SECURITY
# ============================================
COOKIE_SECRET=your-super-secret-cookie-key-min-32-chars-please-change-this
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-please-change-this
SESSION_EXPIRY_HOURS=24

# ============================================
# CORS CONFIGURATION
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# DATABASE (Neon PostgreSQL)
# ============================================
# Get these from: https://console.neon.tech
# Regular connection string (for Prisma migrations and direct queries)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# Direct connection string (for connection pooling)
DIRECT_URL=postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# Prisma Logging
# Options: query, info, warn, error (comma-separated)
# Examples:
#   - "warn,error" (recommended for production - only warnings and errors)
#   - "query,info,warn,error" (verbose - shows all SQL queries)
#   - "error" (only errors)
#   - "" (no logging)
PRISMA_LOG_LEVEL=warn,error

# ============================================
# BRANDING
# ============================================
BRAND_NAME=E-Cart
BRAND_LOGO_URL=https://example.com/logo.png
BRAND_PRIMARY_COLOR=#4F46E5
BRAND_SECONDARY_COLOR=#10B981
LOGIN_TITLE=Welcome Back
LOGIN_SUBTITLE=Sign in to continue to E-Cart
LOGIN_FOOTER=By signing in, you agree to our Terms and Privacy Policy

# ============================================
# OAUTH PROVIDER TOGGLES
# ============================================
AUTH_GOOGLE_ENABLED=true
AUTH_FACEBOOK_ENABLED=false
AUTH_GITHUB_ENABLED=true
AUTH_DISCORD_ENABLED=false
AUTH_LINKEDIN_ENABLED=false
AUTH_CUSTOM_ENABLED=false

# ============================================
# GOOGLE OAUTH
# ============================================
AUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
AUTH_GOOGLE_CALLBACK_URL=http://localhost:3002/auth/google/callback
AUTH_GOOGLE_SCOPES=openid,profile,email

# ============================================
# FACEBOOK OAUTH
# ============================================
AUTH_FACEBOOK_APP_ID=your-facebook-app-id
AUTH_FACEBOOK_APP_SECRET=your-facebook-app-secret
AUTH_FACEBOOK_CALLBACK_URL=http://localhost:3002/auth/facebook/callback
AUTH_FACEBOOK_SCOPES=email,public_profile

# ============================================
# GITHUB OAUTH
# ============================================
AUTH_GITHUB_CLIENT_ID=your-github-client-id
AUTH_GITHUB_CLIENT_SECRET=your-github-client-secret
AUTH_GITHUB_CALLBACK_URL=http://localhost:3002/auth/github/callback
AUTH_GITHUB_SCOPES=read:user,user:email

# ============================================
# DISCORD OAUTH
# ============================================
AUTH_DISCORD_CLIENT_ID=your-discord-client-id
AUTH_DISCORD_CLIENT_SECRET=your-discord-client-secret
AUTH_DISCORD_CALLBACK_URL=http://localhost:3002/auth/discord/callback
AUTH_DISCORD_SCOPES=identify,email

# ============================================
# LINKEDIN OAUTH
# ============================================
AUTH_LINKEDIN_CLIENT_ID=your-linkedin-client-id
AUTH_LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
AUTH_LINKEDIN_CALLBACK_URL=http://localhost:3002/auth/linkedin/callback
AUTH_LINKEDIN_SCOPES=openid,profile,email

# ============================================
# CUSTOM OAUTH PROVIDER
# ============================================
AUTH_CUSTOM_NAME=Custom Provider
AUTH_CUSTOM_CLIENT_ID=your-custom-client-id
AUTH_CUSTOM_CLIENT_SECRET=your-custom-client-secret
AUTH_CUSTOM_CALLBACK_URL=http://localhost:3002/auth/custom/callback
AUTH_CUSTOM_SCOPES=openid,profile,email
AUTH_CUSTOM_AUTHORIZATION_URL=https://provider.example.com/oauth/authorize
AUTH_CUSTOM_TOKEN_URL=https://provider.example.com/oauth/token
AUTH_CUSTOM_USERINFO_URL=https://provider.example.com/oauth/userinfo

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=900000

# ============================================
# AUDIT LOGGING
# ============================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_EVENTS=login,logout,register,token_refresh,session_revoke
