# Server Configuration
PORT=3002
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/groom?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/groom?schema=public"
PRISMA_LOG_ENABLED=true
PRISMA_LOG_LEVEL="warn,error"

# Security
COOKIE_SECRET="super-secret-cookie-secret-at-least-32-chars"
JWT_SECRET="super-secret-jwt-secret-at-least-32-chars"
SESSION_EXPIRY_HOURS=24
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:4000"
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=900000

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_EVENTS="login,logout,register"

# Branding
BRAND_NAME="Groom"
BRAND_LOGO_URL=""
BRAND_PRIMARY_COLOR="#4F46E5"
BRAND_SECONDARY_COLOR="#10B981"
LOGIN_TITLE="Welcome Back"
LOGIN_SUBTITLE="Sign in to continue"
LOGIN_FOOTER="By signing in, you agree to our Terms and Privacy Policy"

# Email (Resend)
RESEND_API_KEY="re_..."
EMAIL_FROM="Groom <noreply@groom.com>"

# Jitsi (JaaS)
JITSI_APP_ID="vpaas-magic-cookie-..."
JITSI_API_KEY="your-jitsi-api-key"
JITSI_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."

# OAuth Providers

## Google
AUTH_GOOGLE_ENABLED=false
AUTH_GOOGLE_CLIENT_ID=""
AUTH_GOOGLE_CLIENT_SECRET=""
AUTH_GOOGLE_CALLBACK_URL="http://localhost:3002/auth/google/callback"
AUTH_GOOGLE_SCOPES="openid,profile,email"

## Custom Provider
AUTH_CUSTOM_ENABLED=false
AUTH_CUSTOM_NAME="Custom Provider"
AUTH_CUSTOM_CLIENT_ID=""
AUTH_CUSTOM_CLIENT_SECRET=""
AUTH_CUSTOM_CALLBACK_URL="http://localhost:3002/auth/custom/callback"
AUTH_CUSTOM_SCOPES="openid,profile,email"
AUTH_CUSTOM_AUTHORIZATION_URL=""
AUTH_CUSTOM_TOKEN_URL=""
AUTH_CUSTOM_USERINFO_URL=""
