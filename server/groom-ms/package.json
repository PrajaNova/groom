{
  "name": "groom-ms",
  "version": "1.0.0",
  "description": "Content Management Microservice for Groom",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/server.js",
    "copy-client": "cp -r src/generated dist/",
    "build": "pnpm run db:generate && tsc && tsc-alias && pnpm run copy-client",
    "watch:tsc": "tsc -w",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:diff": "prisma db push --dry-run",
    "db:push": "prisma db push --skip-generate",
    "db:push:force": "prisma db push --accept-data-loss",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "vitest"
  },
  "keywords": [
    "groom",
    "microservice",
    "fastify",
    "cms"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "catalog:",
    "@fastify/autoload": "catalog:",
    "@fastify/cors": "catalog:",
    "@fastify/helmet": "catalog:",
    "@fastify/sensible": "catalog:",
    "@prisma/client": "catalog:",
    "dotenv": "catalog:",
    "fastify": "catalog:",
    "fastify-plugin": "catalog:",
    "jsonwebtoken": "catalog:",
    "uuid-random": "catalog:",
    "zod": "catalog:",
    "zod-to-json-schema": "catalog:"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "catalog:",
    "@types/node": "catalog:",
    "prisma": "catalog:",
    "tsc-alias": "catalog:",
    "tsconfig-paths": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
