# =============================================================
# Groom Backend - Unified Environment Configuration
# =============================================================

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require
DIRECT_URL=postgresql://user:password@host/database?sslmode=require

# Security
COOKIE_SECRET=your-super-secret-cookie-key-min-32-chars-long
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
SESSION_EXPIRY_HOURS=24
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
FRONTEND_URL=http://localhost:3000

# Branding
BRAND_NAME=Groom
BRAND_LOGO_URL=
BRAND_PRIMARY_COLOR=#2C3531
BRAND_SECONDARY_COLOR=#B48B7F
LOGIN_TITLE=Welcome Back
LOGIN_SUBTITLE=Sign in to continue
LOGIN_FOOTER=By signing in, you agree to our Terms and Privacy Policy

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=900000

# Prisma
PRISMA_LOG_LEVEL=warn,error

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_EVENTS=login,logout,register

# Jitsi (JaaS)
JITSI_APP_ID=
JITSI_API_KEY=
JITSI_PRIVATE_KEY=

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=Groom <noreply@groom.com>
APP_URL=http://localhost:3000

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_KEY_SECRET

# =============================================================
# OAuth Providers
# =============================================================

# Google OAuth
AUTH_GOOGLE_ENABLED=false
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=
AUTH_GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
AUTH_GOOGLE_SCOPES=openid,profile,email

# Facebook OAuth
AUTH_FACEBOOK_ENABLED=false
AUTH_FACEBOOK_APP_ID=
AUTH_FACEBOOK_APP_SECRET=
AUTH_FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback
AUTH_FACEBOOK_SCOPES=email,public_profile

# GitHub OAuth
AUTH_GITHUB_ENABLED=false
AUTH_GITHUB_CLIENT_ID=
AUTH_GITHUB_CLIENT_SECRET=
AUTH_GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback
AUTH_GITHUB_SCOPES=read:user,user:email

# Discord OAuth
AUTH_DISCORD_ENABLED=false
AUTH_DISCORD_CLIENT_ID=
AUTH_DISCORD_CLIENT_SECRET=
AUTH_DISCORD_CALLBACK_URL=http://localhost:3001/api/auth/discord/callback
AUTH_DISCORD_SCOPES=identify,email

# LinkedIn OAuth
AUTH_LINKEDIN_ENABLED=false
AUTH_LINKEDIN_CLIENT_ID=
AUTH_LINKEDIN_CLIENT_SECRET=
AUTH_LINKEDIN_CALLBACK_URL=http://localhost:3001/api/auth/linkedin/callback
AUTH_LINKEDIN_SCOPES=openid,profile,email

# Custom OAuth
AUTH_CUSTOM_ENABLED=false
AUTH_CUSTOM_NAME=Custom Provider
AUTH_CUSTOM_CLIENT_ID=
AUTH_CUSTOM_CLIENT_SECRET=
AUTH_CUSTOM_CALLBACK_URL=http://localhost:3001/api/auth/custom/callback
AUTH_CUSTOM_SCOPES=openid,profile,email
AUTH_CUSTOM_AUTHORIZATION_URL=
AUTH_CUSTOM_TOKEN_URL=
AUTH_CUSTOM_USERINFO_URL=
